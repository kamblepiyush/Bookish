@model Bookish.Models.Book
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre : @Model.Genre.GenreType</li>
    <li>Auther : @Model.Author</li>
    <li>Release date : @Model.ReleaseDate.ToShortDateString()</li>
    <li>Available in stock : @Model.NumberInStock</li>
    <li>Format : @Model.Format.Name</li>
</ul>

