@model IEnumerable<Bookish.Models.Book>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Books</h2>

<table id="books" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Book</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $('#books').DataTable({
                ajax: {
                    url: "/api/books",
                    dataSrc: ""
                },

                columns: [
                    {
                        data: "name",
                        render: function (data, type, book) {
                            return "<a href='/books/detail/" + book.id + "'>" + book.name + "</a>";
                        }
                    },
                    {
                        data: "genre.genreType"
                    }
                ]
            });
        });
    </script>
}

